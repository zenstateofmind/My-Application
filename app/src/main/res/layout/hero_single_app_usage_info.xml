<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/home_screen_background"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/screen_time_margin"
            android:layout_marginLeft="@dimen/screen_time_margin"
            android:text="Screen Time"
            android:fontFamily="@font/proxima_nova_regular"
            android:gravity="center_horizontal"
            android:textSize="14dp"
            android:paddingVertical="8dp"
            android:background="@drawable/rectangle_red_curved"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time Spent"
            android:fontFamily="@font/proxima_nova_regular"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/dark_grey"
            android:textSize="24dp"
            android:id="@+id/total_time_spent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/rectangle_with_border"
        android:orientation="horizontal">

        <!--    <ImageView-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:paddingRight="16dp"-->
        <!--        android:id="@+id/app_icon_single_view"/>-->

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="16dip"
            android:id="@+id/app_icon_single_view"
            android:layout_gravity="top"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Test"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/proxima_nova_regular"
                android:paddingBottom="8dp"
                android:id="@+id/app_name_indiv_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="18dp">

                <!--        <ProgressBar-->
                <!--            android:id="@+id/determinateBar"-->
                <!--            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"-->
                <!--            android:layout_width="10dip"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:progressTint="@color/red"-->
                <!--            android:progress="100"/>-->

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="250dip"
                    android:layout_height="4dp"
                    android:id="@+id/usage_bar"
                    android:background="@drawable/rectangle_red_curved"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:hint="Test"
                    android:textSize="14dp"
                    android:textColor="@color/grey"
                    android:id="@+id/time_spent_indiv_view"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>